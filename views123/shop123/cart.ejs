<%- include('../includes123/head.ejs') %>
</head>

<body>
    <%- include('../includes123/navigation.ejs') %>

    <main>
        <% if (cartItems.length > 0) { %>
            <% for (let product of cartItems) { %>
                <h2>Product Name: <%= product.productId.title %></h2>
                <h2>Product ID: <%= product._id %></h2>
                <h2>Price: <%= product.productId.price %></h2>
                <h2>Quantity: <%= product.quantity %></h2>
                <form action="/delete-product" method="post">
                    <input type="hidden" name="productId123" value="<%= product._id %>">
                    <input type="hidden" name="productPrice123" value="<%= product.price %>">
                    <button class="btn" type="submit">Remove</button>
                </form>
                <hr>
            <% } %>
            <h2>Total Price: <%= cartItems.totalPrice %></h2>
            <div>
                <a href="/clearCart" class="btn">Clear Cart</a>
            </div>
            <div style="margin: 1rem 0">
                <form action="/create-order" method="POST">
                    <button type="submit" class="btn">Order Now!</button>
                </form>
            </div>
        <% } else { %>
            <h1>No products in cart! Add one now!</h1>
            <h2>Total Price: 0</h2>
        <% } %>
    </main>

    <%- include('../includes123/end.ejs') %>