<%- include('../includes123/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes123/navigation.ejs') %>

    <main>
        <% if (errorMessage) { %>
            <div class="user-message user-message--error">
                <%= errorMessage %>
            </div>
        <% } %>
        <form class="product-form" action="/admin123/<%- editing === true ? 'edit-product' : 'add-product1234' %>" method="POST" enctype="multipart/form-data">
            <div class="form-control">
                <label for="title">Title</label>
                <input 
                    class="<%= errorsArray.find(e => e.path === 'title') ? 'invalid' : '' %>"
                    type="text" 
                    name="title" 
                    id="title" 
                    value="<% if (editing) { %> <%= product.title %> <% } %>">
            </div>
            <!-- <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input 
                    class="<%= errorsArray.find(e => e.path === 'imageUrl') ? 'invalid' : '' %>"
                    type="text" 
                    name="imageUrl" 
                    id="imageUrl" 
                    value="<% if (editing) { %> <%= product.imageUrl %> <% } %>">
            </div> -->
            <div class="form-control">
                <label for="image">Image</label>
                <input 
                    type="file" 
                    name="image" 
                    id="image">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input 
                    class="<%= errorsArray.find(e => e.path === 'price') ? 'invalid' : '' %>"
                    type="number" 
                    name="price" 
                    id="price" 
                    step="0.01" 
                    value="<% if (editing) { %><%= product.price %><% } %>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea 
                    class="<%= errorsArray.find(e => e.path === 'description') ? 'invalid' : '' %>"
                    name="description" 
                    id="description" 
                    rows="5"><% if (editing) { %> <%= product.description %> <% } %></textarea>
            </div>

            <% if (editing) { %>
                <input type="hidden" name="prodId123" value="<%= product._id %>">
            <% } %>

            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn" type="submit"><%- editing === true ? 'Edit Product' : 'Add Product' %></button>
        </form>
    </main>
<%- include('../includes123/end.ejs') %>